<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/bg_gray"
        android:orientation="horizontal"
        android:layout_marginTop="2dp">

        <ImageView
            android:id="@+id/ivProductPhoto"
            android:layout_width="100dp"
            android:layout_height="100dp"
            tools:src="@drawable/my"
            android:scaleType="centerCrop" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|top"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ivDecrease"
                    android:src="@drawable/shop_content_subtract"
                    android:scaleType="fitXY" />

                <TextView
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    style="@style/normal_deep_gray"
                    android:text="1"
                    android:id="@+id/tvAmount"
                    android:gravity="center"
                    android:background="@color/white" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ivIncrease"
                    android:src="@drawable/shop_content_add"
                    android:scaleType="fitXY" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_vertical"
                android:gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/large_orange"
                        android:text="￥" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/large_orange"
                        tools:text="10"
                        android:id="@+id/tvPrice"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/large_orange"
                        android:text="/"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/large_orange"
                        tools:text="件"
                        android:id="@+id/tvUnit"/>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/large_deep_gray"
                    tools:text="白鸭毛羽绒服"
                    android:id="@+id/tvName"
                    android:singleLine="true"
                    android:layout_marginTop="3dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/normal_deep_gray"
                    tools:text="谁用谁知道"
                    android:id="@+id/tvDesc"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:layout_marginTop="3dp" />
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>
</LinearLayout>