<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.longhuapuxin.u5.MainActivity$PlaceholderFragment" >

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        android:background="@color/orange" >

         <ImageView
             android:id="@+id/imgPortrait"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="4dp"
            android:background="@color/transparent"
            android:scaleType="fitCenter"
          
            android:src="@drawable/avatar" />
        <ImageButton
            android:id="@+id/mainLeftBtn"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="4dp"
            android:background="@color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/avatar_box_orange" />

        <TextView
            android:id="@+id/headerText"
            style="@style/x_large_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="商家" />

        <Button
            android:id="@+id/shopPay"
            style="@style/large_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:background="@color/transparent"
            android:gravity="center_vertical"
            android:text="@string/shop_pay" />

    </RelativeLayout>

</RelativeLayout>
