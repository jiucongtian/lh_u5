<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/space_comment_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/space_content_comment_bg"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/space_comment_content_msg_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/space_comment_orange" />

        <LinearLayout
            android:id="@+id/space_comment_content__msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/space_comment_content_msg_img"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/space_comment_content__msg_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Reckless"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/space_comment_content__msg_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="加油哦！支持你哈哈。"
                android:textSize="12sp" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>