<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/header_height"
    android:background="@color/orange" >

    <ImageButton
        android:id="@+id/backBtn"
        android:layout_width="40dp"
        android:layout_height="fill_parent"
        android:background="@color/transparent"
        android:src="@drawable/btn_main_back" />

    <TextView
        android:id="@+id/headerText"
        style="@style/x_large_white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="@string/title_my_label" />

    <ImageButton
        android:id="@+id/rightImageBtn"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        android:background="@color/transparent"
        android:src="@drawable/shop_nav_search"
        android:visibility="gone" />

    <Button
        android:id="@+id/rightTextBtn"
        style="@style/normal_white"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        android:background="@color/transparent"
        android:text="关注" 
        android:visibility="gone"/>

</RelativeLayout>