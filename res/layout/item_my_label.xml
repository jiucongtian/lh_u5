<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:background="@color/transparent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/hasLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@color/orange"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/name_label"
                style="@style/large_white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="标 签：" />

            <TextView
                android:id="@+id/name_region"
                style="@style/large_white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/name_label"
                android:layout_below="@+id/name_label"
                android:layout_marginTop="2dp"
                android:text="地 区：" />

            <TextView
                android:id="@+id/name_describe"
                style="@style/large_white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/name_label"
                android:layout_below="@+id/name_region"
                android:layout_marginTop="2dp"
                android:text="说 明：" />

            <TextView
                android:id="@+id/text_label"
                style="@style/small_white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/name_label"
                android:layout_alignBottom="@+id/name_label"
                android:layout_marginLeft="3dp"
                android:layout_toRightOf="@+id/name_label"
                android:text="平面设计师" />

            <TextView
                android:id="@+id/text_region"
                style="@style/small_white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/name_region"
                android:layout_alignBottom="@+id/name_region"
                android:layout_alignLeft="@+id/text_label"
                android:text="成都" />

            <TextView
                android:id="@+id/text_describe"
                style="@style/small_white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/name_describe"
                android:layout_alignBottom="@+id/name_describe"
                android:layout_alignLeft="@+id/text_label"
                android:text="有多个项目平面设计经验。" />

            <TextView
                android:id="@+id/text_trade_log"
                style="@style/small_white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/name_label"
                android:layout_marginRight="5dp"
                android:text="查看交易记录" />

            <ImageButton
                android:id="@+id/editLabel"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_above="@+id/name_describe"
                android:layout_alignRight="@+id/text_trade_log"
                android:layout_below="@id/text_trade_log"
                android:background="@color/transparent"
                android:src="@drawable/label__mylabel_content_revise" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/firstImagelayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp" >

            <ImageView
                android:id="@+id/label_img_1"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginLeft="4dp"
                android:layout_weight="1"
                android:scaleType="centerCrop"/>

            <ImageView
                android:id="@+id/label_img_2"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginLeft="4dp"
                android:scaleType="centerCrop"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/label_img_3"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:scaleType="centerCrop"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/secondImagelayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:visibility="gone" >

            <ImageView
                android:id="@+id/label_img_4"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginLeft="4dp"
                android:scaleType="centerCrop"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/label_img_5"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginLeft="4dp"
                android:scaleType="centerCrop"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/label_img_6"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:scaleType="centerCrop"
                android:layout_weight="1" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/commentClickLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="4dp" >

            <TextView
                android:id="@+id/textViewComment"
                style="@style/small_white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:text="评价" />
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/noLabel"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/profile_label_box" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/label_content_flower_green" />

        <TextView
            android:id="@+id/textView2"
            style="@style/small_green"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="2dp"
            android:text="添加标签" />
    </RelativeLayout>

</LinearLayout>