<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:background="@drawable/space_content_bg" >

    <ImageView
        android:id="@+id/space_header_avatar_circle"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerInParent="true"
        android:src="@drawable/space_avatar_circle" />

    <ImageView
        android:id="@+id/space_header_avatar"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerInParent="true"
        android:src="@drawable/space_avatar" />

    <TextView
        android:id="@+id/space_header_avatar_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="梦回童言"
        android:textSize="16sp" />

</RelativeLayout>