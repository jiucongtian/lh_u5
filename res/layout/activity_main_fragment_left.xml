<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <CheckedTextView
        android:id="@+id/exit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="20dp"
        android:drawableLeft="@drawable/profile_exit"
        android:drawablePadding="10dp"
        android:text="退出"
        android:textColor="@color/white"
        android:textSize="14dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/exit"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/img_portrait"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.longhuapuxin.view.RoundCornerImageView
                android:id="@+id/my_portrait"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginLeft="20dp"
                android:clickable="true"
                android:scaleType="centerCrop"
                android:src="@drawable/avatar"></com.longhuapuxin.view.RoundCornerImageView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/my_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="U5"
                    android:textColor="@color/white"
                    android:textSize="18dp" />

                <com.longhuapuxin.view.IsOnlineView
                    android:id="@+id/is_online_view"
                    android:layout_width="55dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/profile_online_bg"
                    android:clickable="true"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/online_round"
                        android:layout_width="20dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_marginBottom="1dp"
                        android:layout_marginTop="1dp"
                        android:src="@drawable/profile_online" />

                    <ImageView
                        android:id="@+id/busy_round"
                        android:layout_width="20dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_marginBottom="1dp"
                        android:layout_marginTop="1dp"
                        android:src="@drawable/profile_busy"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/online_text"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="2dp"
                        android:layout_toLeftOf="@id/online_round"
                        android:gravity="center_vertical"
                        android:text="在线"
                        android:textColor="@color/white"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/busy_text"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="2dp"
                        android:layout_toRightOf="@id/busy_round"
                        android:gravity="center_vertical"
                        android:text="忙碌"
                        android:textColor="@color/white"
                        android:textSize="14dp"
                        android:visibility="gone" />
                </com.longhuapuxin.view.IsOnlineView>
            </LinearLayout>
        </LinearLayout>


        <CheckedTextView
            android:id="@+id/my_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="15dp"
            android:clickable="true"
            android:drawableLeft="@drawable/profile_label"
            android:drawablePadding="10dp"
            android:drawableRight="@drawable/profile_arrows"
            android:text="我的标签"
            android:textColor="@color/white"
            android:textSize="16dp" />

        <CheckedTextView
            android:id="@+id/my_transaction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="15dp"
            android:clickable="true"
            android:drawableLeft="@drawable/profile_deal"
            android:drawablePadding="10dp"
            android:drawableRight="@drawable/profile_arrows"
            android:text="我的交易"
            android:textColor="@color/white"
            android:textSize="16dp" />

        <CheckedTextView
            android:id="@+id/my_consume"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="15dp"
            android:clickable="true"
            android:drawableLeft="@drawable/profile_consume"
            android:drawablePadding="10dp"
            android:drawableRight="@drawable/profile_arrows"
            android:text="我的消费"
            android:textColor="@color/white"
            android:textSize="16dp" />


        <CheckedTextView
            android:id="@+id/my_discount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="15dp"
            android:visibility="gone"
            android:clickable="true"
            android:drawableLeft="@drawable/profile_discount"
            android:drawablePadding="10dp"
            android:drawableRight="@drawable/profile_arrows"
            android:text="我的折扣券"
            android:textColor="@color/white"
            android:textSize="16dp" />

        <CheckedTextView
            android:id="@+id/my_shop_red_bag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="15dp"
            android:clickable="true"
            android:drawableLeft="@drawable/profile_money"
            android:drawablePadding="10dp"
            android:drawableRight="@drawable/profile_arrows"
            android:text="商家红包"
            android:textColor="@color/white"
            android:textSize="16dp" />

        <CheckedTextView
            android:id="@+id/my_appointment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="15dp"
            android:checked="false"
            android:clickable="true"
            android:drawableLeft="@drawable/profile_reserve"
            android:drawablePadding="10dp"
            android:drawableRight="@drawable/profile_arrows"
            android:text="我的预约"
            android:textColor="@color/white"
            android:textSize="16dp" />

        <CheckedTextView
            android:id="@+id/my_wallet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="15dp"
            android:checked="false"
            android:clickable="true"
            android:drawableLeft="@drawable/profile_balance"
            android:drawablePadding="10dp"
            android:drawableRight="@drawable/profile_arrows"
            android:text="我的钱包"
            android:textColor="@color/white"
            android:textSize="16dp" />

        <CheckedTextView
            android:id="@+id/my_u_lock"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="15dp"
            android:checked="false"
            android:clickable="true"
            android:drawableLeft="@drawable/profile_lock"
            android:drawablePadding="10dp"
            android:drawableRight="@drawable/profile_arrows"
            android:text="安全设置"
            android:textColor="@color/white"
            android:textSize="16dp" />


        <CheckedTextView
            android:id="@+id/my_about_u5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="15dp"
            android:clickable="true"
            android:drawableLeft="@drawable/profile_home"
            android:drawablePadding="10dp"
            android:drawableRight="@drawable/profile_arrows"
            android:text="关于U5"
            android:textColor="@color/white"
            android:textSize="16dp" />

        <CheckedTextView
            android:id="@+id/my_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="15dp"
            android:clickable="true"
            android:drawableLeft="@drawable/profile_box"
            android:drawablePadding="10dp"
            android:drawableRight="@drawable/profile_arrows"
            android:text="收货地址"
            android:textColor="@color/white"
            android:textSize="16dp" />
    </LinearLayout>

</RelativeLayout>