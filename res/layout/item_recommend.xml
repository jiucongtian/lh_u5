<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:id="@+id/itemContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="7dp"
        android:background="@drawable/shop_content_list_bg"
        android:orientation="horizontal" >

        <RelativeLayout
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_margin="5dp" >

            <ImageView
                android:id="@+id/recommendImg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/photo_shops" />

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/shop_content_list_img_box" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/recommendName"
                    style="@style/normal_deep_gray"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="邻家小厨" />

                <TextView
                    android:id="@+id/distance"
                    style="@style/tiny_deep_gray"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="0.1km" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp" >

                <TextView
                    android:id="@+id/hasStop"
                    style="@style/tiny_deep_gray"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="停车位" />

                <ImageView
                    android:id="@+id/stopMark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@id/hasStop"
                    android:src="@drawable/shop_content_kou" />
                
                <TextView
                    android:id="@+id/hasWifi"
                    style="@style/tiny_deep_gray"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="40dp"
                    android:layout_toRightOf="@id/stopMark"
                    android:text="Wifi" />

                <ImageView
                    android:id="@+id/wifiMark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@id/hasWifi"
                    android:src="@drawable/shop_content_kou" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:layout_marginTop="5dp">

                <TextView
                    android:id="@+id/workTime"
                    style="@style/tiny_deep_gray"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="营业时间：" />

                <TextView
                    android:id="@+id/duration"
                    style="@style/tiny_deep_gray"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@id/workTime"
                    android:text="09：00-22：00" />

            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>